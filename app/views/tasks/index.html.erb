<h1>Tasks</h1>

<%= link_to 'New Task', new_task_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Focus</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= form_for(task) do |f| %>
        <div class="field">
          <%= f.label :focus %>
          <%= f.check_box :focus %>
          <div class="actions">
            <%= f.submit %>
          </div>
          <% end %>
        </div></td>
        <td><%= form_for(task) do |f| %>
        <div class="field">
          <%= f.label :completed %>
          <%= f.check_box :completed %>
          <div class="actions">
            <%= f.submit %>
          </div>
          <% end %>
        </div></td>
        <td><%= task.project.name %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
