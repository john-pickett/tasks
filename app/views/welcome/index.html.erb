      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to task.name, task %></td>
            <td><%= form_for(task) do |f| %>
              <div class="field">
                <%= f.check_box :completed %>
              <div class="actions">
                <%= f.submit %>
                <% end %>
              </div></div>
            </td>
            <td><%= task.project.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
